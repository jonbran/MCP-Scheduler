# Environment Configuration Template
# Copy this to .env and update the values for your environment

# Database Configuration
DB_PASSWORD=McpScheduler123!

# JWT Configuration  
JWT_KEY=your-super-secret-jwt-key-that-is-at-least-256-bits-long

# Database Provider (mysql or sqlserver)
DATABASE_PROVIDER=mysql

# Connection Strings
CONNECTION_STRING_DEFAULT=Server=localhost;Database=McpSchedulerDb;User=mcpuser;Password=${DB_PASSWORD};

# Development/Production Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Docker Compose Settings
COMPOSE_PROJECT_NAME=mcp-scheduler
